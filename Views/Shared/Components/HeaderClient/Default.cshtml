
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUserModel> signInManager;
@inject UserManager<AppUserModel> userManager;

<div id="main" class="text-white">
    <div class="bg-client">
        <div class="grid wide d-flex justify-content-between  justify-content-center align-items-center h-100">
            <div class="d-flex">
                <div class="logo pr-3">
                    <a href="#"><img src="~/images/logo_nks.png" alt=""></a>
                </div>
                <div class="list-menu d-flex ">
                    <div class="menu-item menu-parents px-1 rounded mx-1 box-shadow">
                        <a href="#" class="text-white py-1 px-2 ">
                            <i class="ti-menu" style="color: #ffffff;"></i>
                            Danh mục
                        </a>
                        <div class="menu-child shadow-lg rounded bg-client ">
                            <div class="menu-child-category">
                            </div>
                            <div class="menu-child-brand">
                            </div>
                        </div>
                    </div>
                    <div class="menu-item px-1 box-shadow rounded mx-1">
                        <a href="/contact" asp class="text-white  py-1 px-2 ">Liên hệ</a>
                    </div>
                    <div class="menu-item px-1 rounded box-shadow mx-1">
                        <a href="#" class="text-white py-1 px-2 ">Giới thiệu</a>
                    </div>
                </div>
            </div>

            <div class="list-menu d-flex">
                <form action="">
                    <input type="Search" placeholder="Bạn cần tìm gì..." class="rounded border-0 p-1">
                    <button class="rounded border-0  p-1"><i class="ti-search p-1"></i></button>
                </form>
            </div>
            <div class="list-menu d-flex">
                <div class="menu-item px-2 py-1 box-shadow rounded mx-1">
                    <a href="" class="text-white">
                        <i class="ti-shopping-cart"></i> Giỏ hàng
                    </a>
                </div>

                <div class="menu-item menu-user  px-2 py-1 box-shadow rounded mx-1 ">
                @if (signInManager.IsSignedIn(User))
                {
                    <div class="user"> @userManager.GetUserName(User)</div>
                    <form asp-area="Identity"  asp-controller="Account" asp-action="Logout" method="POST" class="user-info">
                        <div class="user-info-item box-shadow"><a asp-area="Identity" asp-controller="Manage" asp-action="profileUser">Thông tin</a></div>
                        <div class="user-info-item box-shadow"><a asp-area="Identity" asp-controller="Manage" asp-action="ChangePassword">Đổi mật khẩu</a></div>
                        <div class="user-info-item box-shadow"><button type="submit" >Đăng xuất</button></div>
                    </form>
                }
                else
                {
                    <a asp-asp="Identity" asp-controller="Account" asp-action="Login" class="text-white">
                        <i class="ti-user"></i> Đăng nhập
                    </a>
                }

                </div>
            </div>
        </div>
    </div>
</div>