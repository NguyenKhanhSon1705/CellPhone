@model List<CartItem>
@* <link rel="stylesheet" href="~/lib/multiple-select/dist/multiple-select.min.css"> *@

<body class="bg-light pt-4">
    <div class="container grid wide">
        <div class="row">
            <div class="shadow p-3 mb-5 bg-body rounded col-md-6 order-md-2 mb-4 position-fixed " style="right: 0;">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Giỏ hàng của bạn</span>
                </h4>
                <ul class="list-group mb-3">
                    <table class="table table-hover text-center">
                        <thead>
                            <tr class="border-only-bottom">
                                <th>STT</th>
                                <th>Hình ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                decimal total = 0; int quantity = 0; int count = 1;
                            }
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@(count++)</td>
                                    <td><img height="40px" src="@i.product.Image" class="mr-2"></img></td>
                                    <td>
                                        <h6 class="my-0"><a asp-controller="productsclient" asp-action="Details"
                                                asp-route-slug="@i.product.Slugp">@i.product.Title</a></h6>
                                    </td>
                                    <td>@i.quantity</td>
                                    <td><span class="ml-2 text-danger font-weight-bold"
                                            title="@Functions.VNĐ(@i.product.Price * @i.quantity)">@Functions.VNĐ(@i.product.Price)đ</span>
                                    </td>
                                </tr>
                                var sum = i.quantity * i.product.Price;
                                quantity += i.quantity;
                                total += sum;
                            }
                            
                        </tbody>
                    </table>
                    <li class="list-group-item d-flex justify-content-between my-3">
                        <span>Tổng tiền (VND)</span>
                        <span>Số lượng: @quantity (sản phẩm)</span>
                        <strong class="text-danger">@Functions.VNĐ(total) đ</strong>
                    </li>
                    <li>
                        <a asp-controller="productsclient" asp-action="cart" class="btn-lg box-shadow my-3">Trở về giỏ
                            hàng</a>
                    </li>
                </ul>


            </div>

            <div class="col-md-6 order-md-1 shadow p-3 mb-5 bg-body rounded">
                <h4 class="mb-3 text-muted">Thông tin thanh toán</h4>
                <form class="" id="form" novalidate>

                    <div class="shadow p-3 mb-5 bg-body rounded p-3">
                        <h4 class="text-center">Thông tin khách hàng</h4>
                        <div class="row">
                            <div class="mb-12 col-12">
                                <div class="form-group form-field">
                                    <input id="fullname" name="fullname" rule="required" type="text" placeholder=" "
                                        class="form-input form-error">
                                    <label class="form-label">Họ và tên</label>
                                    <span class="form-message"></span>
                                </div>
                            </div>
                        </div>

                        <div class=" row d-flex justify-content-between">
                            <div class="mb-3 col-6">
                                <div class="form-group form-field">
                                    <input id="fullname" name="fullname" rule="required" type="text" placeholder=" "
                                        class="form-input form-error">
                                    <label class="form-label">Số điện thoại</label>
                                    <span class="form-message"></span>
                                </div>
                            </div>

                            <div class="mb-3 col-6">
                                <div class="form-group form-field">
                                    <input id="fullname" name="fullname" rule="required" type="text" placeholder=" "
                                        class="form-input form-error">
                                    <label class="form-label">Email</label>
                                    <span class="form-message"></span>
                                </div>
                            </div>
                        </div>
                        <h6 class="text-center">Thông tin sẽ được gửi tới địa chỉ Email trên</h6>

                    </div>


                    <div class="p-2 shadow p-3 mb-5 bg-body rounded my-3">
                        <h4 class="text-center">Thông tin nhận hàng</h4>
                        <div class="row">

                            <div class="col-md-12 mb-3">
                                <label for="city">Tỉnh/ Thành phố</label>
                                <select class=" d-block w-100" id="city" multiple>

                                </select>

                            </div>


                        </div>
                        <div class="row ">
                            <div class="col-md-6 mb-3">
                                <label for="district">Quận/ Huyện</label>
                                <select class=" custom-select d-block w-100" id="district" required>

                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="wards">Phường/ Xã</label>
                                <select class="custom-select d-block w-100" id="wards" required>

                                </select>
                            </div>

                        </div>
                        <div class="row d-flex justify-content-between">
                            <div class="mb-6">
                                <div class="form-group form-field">
                                    <input id="fullname" name="fullname" rule="required" type="text" placeholder=" "
                                        class="form-input form-error">
                                    <label class="form-label">Địa chỉ</label>
                                    <span class="form-message"></span>
                                </div>
                            </div>
                            <div class="mb-6">
                                <div class="form-group form-field">
                                    <input id="fullname" name="fullname" rule="required" type="text" placeholder=" "
                                        class="form-input form-error">
                                    <label class="form-label">Ghi chú thêm</label>
                                    <span class="form-message"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="mb-4">

                    <div class="row">
                        <div class="col-2">
                            <button class="box-shadow btn-lg" type="">Hủy</button>
                        </div>
                        <div class="col-10">
                            <button class=" btn-lg button box-shadow " type="">Đặt hàng</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <script type="module" src="~/js/Products/Checkout.js"></script>
</body>

</html>
