
@model PostModel
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/multiple-select/dist/multiple-select.min.css">
</head>
@{
    ViewData["Title"] = "Thêm bài viết Blog";
    var list = ViewData["categories"] as MultiSelectList;
    Layout = "";
}

<h1>create</h1>
<hr />


<div>
    <a asp-action="Index">Danh sách bài viết</a>
</div>


<script src="~/lib/multiple-select/dist/multiple-select.min.js"></script>
<div class="row p-5">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PostCategories" class="control-label"></label>
                <select asp-for="PostCategories" multiple="multiple" asp-items="list" class="w-100"></select>
                <span asp-validation-for="PostCategories" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AbstractTitle" class="control-label"></label>
                <textarea asp-for="AbstractTitle" class="form-control"></textarea>
                <span asp-validation-for="AbstractTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="from-group col-md-12">
                <label class="control-lable">Images</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                    </div>
                    <input type="text" class="form-control" asp-for="Image" id="file_input"
                        aria-describedby="button-addon2">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Tạo bài viết" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    $("#PostCategories").multipleSelect({
        keepOpen: false,
        isOpen: false,
        single: true
    });
</script>

@{
    var note = new Summernote("#Content");
}

<partial name="_Summernote" model="note"></partial>
