@model LogInModel;
@{
    Layout = "";
}

<head>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/site.min.css">
</head>
<div class="h-100 d-flex justify-content-center align-items-center">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="/admin/contact/index" method="POST"
        class="form-account">
        <div class="p-4 d-flex justify-content-center"><img src="~/images/admin.png" alt=""></div>
        <div class="text-danger">@Html.ValidationSummary()</div>
        <div class="form-field ">
            <input asp-for="Email" class="form-control form-input" placeholder=" " />
            <span class="form-label">@Html.DisplayNameFor(model => model.Email)</span>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-field ">
            <input asp-for="Password" class="form-control form-input" placeholder=" " />
            <span class="form-label">@Html.DisplayNameFor(model => model.Password)</span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="custom-control custom-checkbox small">
                <input asp-for="RememberMe" class="custom-control-input">
                <label class="custom-control-label" asp-for="RememberMe">
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <button type="submit" class="btn-submit w-50">Đăng nhập</button>
        <div>
            <p class="p-3">Bạn chưa có tài khoản hãy <a class="text-info" asp-area="identity" asp-controller="Account"  asp-action="Register">Đăng ký</a></p>
        </div>
    </form>
</div>

<body>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>