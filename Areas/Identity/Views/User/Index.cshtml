@Html.AntiForgeryToken()

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3 w-100">
                        <div class="d-flex align-items-center justify-content-center w-75">
                            <div class="form-field w-50">
                                <input type="search" name="search" class="form-control form-input w-100"
                                    placeholder=" " />
                                <span class="form-label">Tìm kiếm</span>
                            </div>
                            <button class="buttonSearch box-shadow active px-2 py-1 rounded "><svg width="20px"
                                    height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                                    <g id="SVGRepo_iconCarrier">
                                        <path
                                            d="M11 6C13.7614 6 16 8.23858 16 11M16.6588 16.6549L21 21M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z"
                                            stroke="#fff" stroke-width="2" stroke-linecap="round"
                                            stroke-linejoin="round"></path>
                                    </g>
                                </svg></button>
                        </div>
                        <div class="">
                            <a asp-action="index" asp-controller="Role" asp-area="Identity"><svg width="30px" height="30px" viewBox="0 0 24 24"
                                    fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                                    <g id="SVGRepo_iconCarrier">
                                        <path d="M7 12L16 12" stroke="#200E32" stroke-width="2" stroke-linecap="round"
                                            stroke-linejoin="round"></path>
                                        <path d="M13 16L17 12L13 8" stroke="#200E32" stroke-width="2"
                                            stroke-linecap="round" stroke-linejoin="round"></path>
                                    </g>
                                </svg> Quản lý vai trò</a>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center w-100">
                        <div class="d-flex align-items-center ">
                            <h4 class="card-title totalUser m-0"></h4>
                            <div class="d-flex px-3">
                                <button class="user-all px-3 py-1 mx-2 box-shadow active">Tất cả</button>
                                <button class="user-roles px-3 py-1 mx-2  box-shadow ">Nhân viên</button>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên người dùng</th>
                                    <th>Email</th>
                                    <th>Vai trò(Roles)</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody class="list">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="pagination d-flex justify-content-center"></div>
            </div>
        </div>
    </div>
</div>
<div id="toast"></div>

<script type="module" src="~/js/UserMange.js"></script>
