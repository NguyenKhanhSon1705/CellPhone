@Html.AntiForgeryToken();
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title">Danh sách vai trò</h4>
                        <div class="mb-2">
                            <button class="box-shadow button create-role">Tạo role mới</button>
                            <button class="box-shadow button" asp-action="Index" asp-controller="User">Quản lý thành viên</button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên vai trò (Roles)</th>
                                    <th>Quyền(Claims)</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody class="list">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="toast"></div>

<body>
    <script type="module" src="~/js/roles.js"></script>
</body>