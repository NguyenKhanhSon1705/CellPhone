@Html.AntiForgeryToken()

<head>
    <link rel="stylesheet" href="~/lib/froala-editor/css/froala_editor.pkgd.min.css">
</head>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3 w-100">
                        <div class="d-flex align-items-center w-50">
                            <h3 class="mb-0">Danh sách trạng thái đơn hàng</h3>
                        </div>
                        <div class="d-flex align-items-center">
                            <button class="create box-shadow button text-white">Thêm trạng thái</button>
                            <div>
                                <a asp-action="index" asp-controller="category" asp-area="blog"><svg width="30px"
                                        height="30px" viewBox="0 0 24 24" fill="none"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round">
                                        </g>
                                        <g id="SVGRepo_iconCarrier">
                                            <path d="M7 12L16 12" stroke="#200E32" stroke-width="2"
                                                stroke-linecap="round" stroke-linejoin="round"></path>
                                            <path d="M13 16L17 12L13 8" stroke="#200E32" stroke-width="2"
                                                stroke-linecap="round" stroke-linejoin="round"></path>
                                        </g>
                                    </svg> Quản lý đơn hàng</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr class="text-center">
                                    <th>STT</th>
                                    <th>Tên trạng thái</th>
                                    <th>Mô tả</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody class="list">

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="toast"></div>

<script type="module" src="~/js/Order/Status.js"></script>